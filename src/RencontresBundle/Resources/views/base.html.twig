<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    {% block css %}<link rel="stylesheet" href="{{ asset('css/app.css') }}">{% endblock %}

    <!-- import de bootstrap -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <title>{% block title %}Site de rencontres{% endblock %}</title>

    {% block js %}{% endblock %}

</head>
<body>

<div class="container">
    <header>
        <a href="{{ path('homepage') }}"><h1>Bienvenue sur Nom du site</h1></a>
        <nav class="menu-header">
            <ul>
            </ul>
        </nav>
    </header>

    {# message flash #}
    {%  for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {%  endfor %}

    {% block content %}{% endblock %}

    <footer>
        <nav>
            <ul>
                {% if app.user %}
                    <li><a href="{{ path('logout') }}">Deconnexion</a></li>
                {% endif %}
            </ul>
        </nav>
    </footer>
</div>
</body>
</html>